# Environment variables
NODE_ENV=development
PORT=3000

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kytucxa_db
DB_USERNAME=postgres
DB_PASSWORD=your_password

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Email configuration (for email verification and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# SMTP configuration (alternative naming for UC7)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=ktx@stu.edu.vn
SMTP_PASS=your_app_password
SMTP_FROM=ktx@stu.edu.vn

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173

# PayOS configuration
PAYOS_CLIENT_ID=your_payos_client_id
PAYOS_API_KEY=your_payos_api_key
PAYOS_CHECKSUM_KEY=your_payos_checksum_key
PAYOS_RETURN_URL=http://localhost:3000/api/payments/return
PAYOS_CANCEL_URL=http://localhost:3000/api/payments/cancel

# Upload configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
